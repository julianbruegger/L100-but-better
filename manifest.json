{
  "manifest_version": 3,
  "name": "L100 but Better",
  "version": "2.0",
  "description": "Introducing L100 Enhancer, a cutting-edge mobile application designed to revolutionize your visual experience.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "logo16.png",
      "32": "logo32.png",
      "64": "logo64.png",
      "128": "logo128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://activity.leuchterag.ch/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["*://*/*"]
    }
  ]
}
